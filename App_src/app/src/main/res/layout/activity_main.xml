<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Filter Bar -->
    <LinearLayout
        android:id="@+id/filter_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Subject Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/select_subject"
            android:textSize="20dp"
             />
        <Spinner
            android:id="@+id/subject_filter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:prompt="@string/select_subject"
            android:background="@drawable/spinner_border"
            />

        <!-- Date Range -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/date_from"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="From Date"
                android:inputType="none"
                android:focusable="false" />
            <EditText
                android:id="@+id/date_to"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="To Date"
                android:inputType="none"
                android:focusable="false"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Focus Level Range -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <EditText
                android:id="@+id/focus_min"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Min Focus (1-5)"
                android:inputType="number" />
            <EditText
                android:id="@+id/focus_max"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Max Focus (1-5)"
                android:inputType="number"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Notes Search -->
        <EditText
            android:id="@+id/notes_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Search in Notes"
            android:inputType="text"
            android:layout_marginTop="8dp" />

        <!-- Filter and Clear Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/filter_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Filter" />
            <Button
                android:id="@+id/clear_filters_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear Filters"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Study Summary Header -->
    <LinearLayout
        android:id="@+id/summary_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/filter_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Study Time: 0 minutes" />

        <TextView
            android:id="@+id/most_studied_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Studied: None" />

        <TextView
            android:id="@+id/average_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Focus: 0.0" />
    </LinearLayout>

    <!-- Button to open Data Visualization -->
    <Button
        android:id="@+id/chart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Study Chart"
        app:layout_constraintTop_toBottomOf="@id/summary_header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <!-- Session List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/session_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/chart_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add new session"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thêm vào dưới summary_header, bên cạnh chart_button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/analyze_ai_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Analytic by AI"
        app:layout_constraintTop_toBottomOf="@id/summary_header"
        app:layout_constraintStart_toEndOf="@id/chart_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:cornerRadius="12dp"
        app:backgroundTint="#2196F3" />

</androidx.constraintlayout.widget.ConstraintLayout>