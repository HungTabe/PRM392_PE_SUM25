<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Subject -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add Session"
        android:textSize="30dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/select_subject"
        android:textSize="20dp"
        />
    <Spinner
        android:id="@+id/subject_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Date -->
    <EditText
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Select Date"
        android:inputType="none"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/subject_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Duration -->
    <EditText
        android:id="@+id/duration_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Duration (minutes)"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/date_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Focus Level -->
    <RatingBar
        android:id="@+id/focus_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        app:layout_constraintTop_toBottomOf="@id/duration_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Notes -->
    <EditText
        android:id="@+id/notes_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Reflection / Notes (optional)"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/focus_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/notes_input"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</LinearLayout>